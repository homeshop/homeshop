{
    "name": "homeshop/homeshop",
    "license": "proprietary",
    "description": "Homeshop e-Commerce Platform",
    "keywords": [
        "homeshop",
        "laravel",
        "B2B2C",
        "e-Commerce"
    ],
    "authors": [
        {
            "name": "Homeshop Team",
            "email": "homeshop@shopes.cn"
        }
    ],
    "type": "project",
    "require": {
        "homeshop/framework": "v1.*"
    },
    "require-dev": {
    },
    "autoload": {
        "psr-0":{
            "":[
                "module/Library/"
            ]
        },
        "classmap": [
            "resources/database"
        ],
        "psr-4": {
            "App\\Core\\": "module/App/Core/",
            "App\\": "module/App/",
            "": [
                "module/",
                "custom/"
            ]
        }
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('resources/.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php cmd key:generate",
            "php cmd vendor:publish --quiet"
        ],
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "php cmd optimize"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php cmd ide-helper:generate",
            "php cmd ide-helper:meta",
            "php cmd optimize"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "secure-http": false
    },
    "extra": {
        "merge-plugin": {
            "include": [
            ],
            "require": [
            ],
            "recurse": true,
            "replace": true,
            "merge-dev": true,
            "merge-extra": true,
            "merge-extra-deep": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "composer",
            "url": "http://package.shopes.cn"
        }
    ]
}
